<Window x:Class="DetectorSismos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detector de Sismos en Tiempo Real" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <!-- TÃ­tulo -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <TextBlock Text="ðŸŒ Detector de Sismos en Tiempo Real" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Alerta destacada -->
        <Border Grid.Row="1" Background="#F9E79F" BorderBrush="#B7950B" BorderThickness="1" CornerRadius="8" Margin="10,10,10,0" Padding="10">
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="txtAlertaTitulo" Text="Sin alerta sÃ­smica reciente" FontSize="18" FontWeight="Bold" Foreground="#B7950B"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Fecha: " FontWeight="Bold"/>
                    <TextBlock x:Name="txtAlertaFecha" Text="-" Margin="5,0,15,0"/>
                    <TextBlock Text="Severidad: " FontWeight="Bold"/>
                    <TextBlock x:Name="txtAlertaSeveridad" Text="-" Margin="5,0,15,0"/>
                </StackPanel>
                <TextBlock x:Name="txtAlertaDescripcion" Text="" TextWrapping="Wrap" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Controles de filtro y configuraciÃ³n -->
        <Grid Grid.Row="2" Margin="10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5">
                <TextBlock Text="PerÃ­odo:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                <ComboBox x:Name="cbPeriodo" Width="200" SelectedIndex="1">
                    <ComboBoxItem Content="Ãšltima Hora"/>
                    <ComboBoxItem Content="Ãšltimo DÃ­a"/>
                    <ComboBoxItem Content="Ãšltima Semana"/>
                    <ComboBoxItem Content="Ãšltimo Mes"/>
                    <ComboBoxItem Content="Significativos - Ãšltima Hora"/>
                    <ComboBoxItem Content="Significativos - Ãšltimo DÃ­a"/>
                    <ComboBoxItem Content="Significativos - Ãšltima Semana"/>
                    <ComboBoxItem Content="Significativos - Ãšltimo Mes"/>
                </ComboBox>
            </StackPanel>


            <!-- Intervalo de consulta -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="5">
                <TextBlock Text="Intervalo (seg):" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="Bold"/>
                <TextBox x:Name="txtIntervalo" Width="50" Text="30"/>
            </StackPanel>

            <!-- Filtro de severidad -->
            <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="5">
                <TextBlock Text="Severidad:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="Bold"/>
                <ComboBox x:Name="cbSeveridad" Width="100" SelectedIndex="0">
                    <ComboBoxItem Content="Todas"/>
                    <ComboBoxItem Content="Mayor"/>
                    <ComboBoxItem Content="Moderada"/>
                    <ComboBoxItem Content="Menor"/>
                </ComboBox>
            </StackPanel>

            <Button Grid.Column="4" 
                    x:Name="btnActualizar" 
                    Content="ðŸ”„ Actualizar" 
                    Padding="15,5" 
                    Margin="5"
                    Click="btnActualizar_Click"
                    Background="#3498DB"
                    Foreground="White"
                    FontWeight="Bold"
                    Cursor="Hand"/>

            <CheckBox Grid.Column="5" 
                      x:Name="chkMonitoreo" 
                      Content="Monitoreo AutomÃ¡tico" 
                      VerticalAlignment="Center" 
                      Margin="10,0"
                      Checked="chkMonitoreo_Checked"
                      Unchecked="chkMonitoreo_Unchecked"/>
        </Grid>

        <!-- Lista de sismos -->
        <Grid Grid.Row="3" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       x:Name="txtContador" 
                       Text="Sismos detectados: 0" 
                       FontWeight="Bold" 
                       FontSize="14"
                       Margin="0,0,0,10"/>

            <DataGrid Grid.Row="1"
                      x:Name="dgSismos" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      AlternatingRowBackground="#ECF0F1"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      SelectionMode="Single"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Fecha y Hora" Binding="{Binding Properties.FechaHora, StringFormat='{}{0:dd/MM/yyyy HH:mm:ss}'}" Width="150"/>
                    <DataGridTextColumn Header="Magnitud" Binding="{Binding Properties.Magnitud, StringFormat='N1'}" Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Properties.Magnitud}" Value="{x:Null}">
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Lugar" Binding="{Binding Properties.Lugar}" Width="*" MinWidth="200"/>
                    <DataGridTextColumn Header="Latitud" Binding="{Binding Geometry.Latitud, StringFormat='N3'}" Width="90"/>
                    <DataGridTextColumn Header="Longitud" Binding="{Binding Geometry.Longitud, StringFormat='N3'}" Width="90"/>
                    <DataGridTextColumn Header="Profundidad (km)" Binding="{Binding Geometry.Profundidad, StringFormat='N1'}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Tsunami" Binding="{Binding Properties.Tsunami}" Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Properties.Tsunami}" Value="1">
                                        <Setter Property="Foreground" Value="Red"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Text" Value="âš ï¸ SÃ"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Properties.Tsunami}" Value="0">
                                        <Setter Property="Text" Value="No"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Barra de estado -->
        <StatusBar Grid.Row="4" Background="#34495E">
            <StatusBarItem>
                <TextBlock x:Name="txtEstado" 
                           Text="Listo" 
                           Foreground="White" 
                           Padding="5"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="txtUltimaActualizacion" 
                           Text="Ãšltima actualizaciÃ³n: Nunca" 
                           Foreground="White" 
                           Padding="5"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
