<Application x:Class="DetectorSismos.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Paleta corporativa -->
            <Color x:Key="PrimaryDark">#FF1A2B3D</Color>
            <Color x:Key="PrimaryMid">#FF2C3E50</Color>
            <Color x:Key="AccentBlue">#FF2563EB</Color>
            <Color x:Key="AccentBlueHover">#FF1D4ED8</Color>
            <Color x:Key="Success">#FF059669</Color>
            <Color x:Key="Warning">#FFD97706</Color>
            <Color x:Key="Danger">#FFDC2626</Color>
            <Color x:Key="BgApp">#FFF1F5F9</Color>
            <Color x:Key="BgCard">#FFFFFFFF</Color>
            <Color x:Key="BorderSubtle">#FFE2E8F0</Color>
            <Color x:Key="TextPrimary">#FF0F172A</Color>
            <Color x:Key="TextSecondary">#FF64748B</Color>
            <Color x:Key="TextMuted">#FF94A3B8</Color>

            <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}"/>
            <SolidColorBrush x:Key="PrimaryMidBrush" Color="{StaticResource PrimaryMid}"/>
            <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}"/>
            <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
            <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}"/>
            <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}"/>
            <SolidColorBrush x:Key="BgAppBrush" Color="{StaticResource BgApp}"/>
            <SolidColorBrush x:Key="BgCardBrush" Color="{StaticResource BgCard}"/>
            <SolidColorBrush x:Key="BorderSubtleBrush" Color="{StaticResource BorderSubtle}"/>
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
            <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>

            <!-- Tipografía -->
            <FontFamily x:Key="AppFont">Segoe UI, Segoe UI Variable, sans-serif</FontFamily>
            <FontFamily x:Key="AppFontMono">Consolas, Segoe UI Mono, monospace</FontFamily>

            <!-- Botón primario -->
            <Style x:Key="ButtonPrimary" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentBlueBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="20,10"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

            <!-- Botón secundario -->
            <Style x:Key="ButtonSecondary" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
                <Setter Property="Background" Value="#FF64748B"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>

            <!-- DataGrid estilo profesional -->
            <Style x:Key="DataGridStyle" TargetType="DataGrid">
                <Setter Property="Background" Value="{StaticResource BgCardBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="RowBackground" Value="White"/>
                <Setter Property="AlternatingRowBackground" Value="#FFF8FAFC"/>
                <Setter Property="GridLinesVisibility" Value="Horizontal"/>
                <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderSubtleBrush}"/>
                <Setter Property="HeadersVisibility" Value="Column"/>
                <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="RowHeight" Value="36"/>
                <Setter Property="ColumnHeaderHeight" Value="40"/>
            </Style>
            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                <Setter Property="Background" Value="#FFF1F5F9"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Padding" Value="12,0"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
                <Setter Property="BorderThickness" Value="0,0,0,2"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
